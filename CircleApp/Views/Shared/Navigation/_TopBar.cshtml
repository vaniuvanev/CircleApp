<header class="z-[100] h-[--m-top] sky-50 fixed left-0 top-0 flex w-full items-center border-b border-slate-200 bg-white/80 backdrop-blur-xl">
    <div class="lg:w-[--w-side-sm] 2xl:w-[--w-side]">
        <div class="flex items-center gap-1">
            <button uk-toggle="target: #site__sidebar ; cls :!-translate-x-0"
                    class="group flex h-8 w-8 items-center justify-center rounded-full text-xl hover:bg-gray-100 xl:hidden">
                <ion-icon name="menu-outline" class="text-2xl group-aria-expanded:hidden"></ion-icon>
                <ion-icon name="close-outline" class="hidden text-2xl group-aria-expanded:block"></ion-icon>
            </button>

            <div id="logo" class="flex items-center">
                <a class="flex items-center">
                    <img src="~/images/logo.png" class="hidden w-10 md:block" />
                    <span class="ml-2">Circle App</span>
                </a>
            </div>

        </div>
    </div>
    <div class="relative flex-1">
        <div class="mx-auto flex max-w-[1220px] items-center">
            <form id="search--box"
                  class="bg-secondery left-0 z-20 w-screen overflow-hidden rounded-xl sm:relative sm:w-96 xl:w-[680px] max-sm:fixed max-sm:top-2 max-md:hidden">

                <ion-icon name="search" class="-translate-y-1/2 absolute left-4 top-1/2"></ion-icon>
                <input type="text" name="query" placeholder="Search Posts, Friends..." class="h-12 w-full !bg-transparent !pl-10 !text-sm !font-normal" />
            </form>
        </div>

        <div class="mx-auto flex max-w-[1220px] items-center">
            <div class="-translate-y-1/2 absolute right-5 top-1/2 flex items-center gap-2 text-black sm:gap-4">

                @* notification icon *@
                <button type="button" class="relative rounded-full p-1 sm:bg-secondery sm:p-2">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-6 w-6 max-sm:hidden">
                        <path d="M5.85 3.5a.75.75 0 00-1.117-1 9.719 9.719 0 00-2.348 4.876.75.75 0 001.479.248A8.219 8.219 0 015.85 3.5zM19.267 2.5a.75.75 0 10-1.118 1 8.22 8.22 0 011.987 4.124.75.75 0 001.48-.248A9.72 9.72 0 0019.266 2.5z" />
                        <path fill-rule="evenodd" d="M12 2.25A6.75 6.75 0 005.25 9v.75a8.217 8.217 0 01-2.119 5.52.75.75 0 00.298 1.206c1.544.57 3.16.99 4.831 1.243a3.75 3.75 0 107.48 0 24.583 24.583 0 004.83-1.244.75.75 0 00.298-1.205 8.217 8.217 0 01-2.118-5.52V9A6.75 6.75 0 0012 2.25zM9.75 18c0-.034 0-.067.002-.1a25.05 25.05 0 004.496 0l.002.1a2.25 2.25 0 11-4.5 0z" clip-rule="evenodd" />
                    </svg>
                    <div class="absolute right-0 top-0 -m-1 rounded-full bg-red-600 px-1 text-xs text-white" id="notificationsCount">0</div>
                </button>

                <div class="border2 hidden w-screen rounded-lg bg-white pr-1.5 drop-shadow-xl md:w-[365px]" uk-drop="offset:6;pos: bottom-right; mode: click; animate-out: true;">

                    <div class="flex items-center justify-between gap-2 p-4 pb-2">
                        <h3 class="text-xl font-bold">Notifications</h3>
                    </div>

                    <div class="h-[400px] w-full overflow-y-auto pr-2 text-sm">
                        <div class="p-1 pl-2 text-sm font-normal" id="notification-dropdown">
                            No notifications...
                        </div>
                    </div>

                </div>

                <div class="bg-secondery relative shrink-0 cursor-pointer rounded-full">
                    <img src="~/images/avatar/user.png" class="h-7 w-7 shrink-0 rounded-full shadow sm:h-9 sm:w-9" />
                </div>
                <div class="border2 hidden w-64 rounded-lg bg-white drop-shadow-xl" uk-drop="offset:6;pos: bottom-right;animate-out: true;">

                    <a>
                        <div class="flex items-center gap-4 p-4 py-5">
                            <img src="~/images/avatar/user.png" class="h-10 w-10 rounded-full shadow" />
                            <div class="flex-1">
                                <h4 class="text-sm font-medium text-black">Ervis Trupja</h4>
                                <div class="font-light/70 mt-1 text-sm text-blue-600">ervistrupja</div>
                            </div>
                        </div>
                    </a>
                    <hr />
                    <nav>
                        <a>
                            <div class="flex items-center gap-2.5 rounded-md p-2 px-2.5 hover:bg-secondery">
                                <ion-icon name="settings-outline" class="text-lg"></ion-icon> My Account
                            </div>
                        </a>
                        <hr />
                        <a>
                            <div class="flex items-center gap-2.5 rounded-md p-2 px-2.5 hover:bg-secondery">
                                <ion-icon name="exit-outline" class="text-lg"></ion-icon> Log Out

                            </div>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>

